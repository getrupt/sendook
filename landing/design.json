{
  "layout": {
    "grid": {
      "columns": 12,
      "gutter": "32px",
      "maxWidth": "1200px",
      "contentWidth": "80%"
    },
    "cards": {
      "borderRadius": "16px",
      "padding": "32px",
      "shadow": "0 4px 24px rgba(0, 0, 0, 0.05)"
    },
    "sections": {
      "spacingY": "96px",
      "paddingX": "64px",
      "maxContentWidth": "1440px"
    },
    "alignment": {
      "text": "left",
      "content": "center"
    }
  },
  "colors": {
    "background": "#F7F8F6",
    "surface": "#FFFFFF",
    "text": {
      "primary": "#1E1E1E",
      "secondary": "#4A4A4A",
      "muted": "#9A9A9A"
    },
    "accent": {
      "green": "#00A36C",
      "yellow": "#FFCC33",
      "orange": "#F6B23E",
      "blue": "#5BA5D9"
    },
    "illustrations": {
      "skyBlue": "#C9E7F5",
      "sand": "#F2C986",
      "forest": "#4B8C5A",
      "cliff": "#D1692D"
    }
  },
  "typography": {
    "fontFamily": "'Inter', 'SF Pro Display', 'Helvetica Neue', sans-serif",
    "headings": {
      "h1": {
        "fontSize": "48px",
        "fontWeight": 600,
        "lineHeight": "1.2",
        "letterSpacing": "-0.02em"
      },
      "h2": {
        "fontSize": "32px",
        "fontWeight": 600,
        "lineHeight": "1.3",
        "letterSpacing": "-0.01em"
      },
      "h3": {
        "fontSize": "24px",
        "fontWeight": 500,
        "lineHeight": "1.4"
      }
    },
    "body": {
      "fontSize": "18px",
      "lineHeight": "1.6",
      "fontWeight": 400
    },
    "caption": {
      "fontSize": "14px",
      "lineHeight": "1.5",
      "color": "#9A9A9A"
    }
  },
  "components": {
    "buttons": {
      "borderRadius": "9999px",
      "padding": "12px 24px",
      "fontWeight": 500,
      "transition": "all 0.2s ease",
      "hover": {
        "transform": "translateY(-2px)",
        "shadow": "0 6px 12px rgba(0, 0, 0, 0.1)"
      }
    },
    "cards": {
      "illustrationPlacement": "right",
      "textAlignment": "left",
      "imageMask": "rounded",
      "padding": "40px 48px"
    },
    "testimonial": {
      "avatarSize": "48px",
      "quoteFontStyle": "italic",
      "stats": {
        "fontSize": "32px",
        "fontWeight": 600,
        "color": "#1E1E1E"
      }
    }
  },
  "spacing": {
    "xs": "8px",
    "sm": "16px",
    "md": "24px",
    "lg": "40px",
    "xl": "64px",
    "xxl": "96px"
  },
  "illustrationStyle": {
    "palette": "vintage-southwest",
    "description": "Warm landscape scenes with soft gradients and bold outlines. Includes birds, cliffs, roads, and skies rendered in natural tones.",
    "technique": "Vector illustrations with grain and texture overlay"
  }
}
